{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/**",
        "host": "teacher.mrhsieh.app",
        "destination": "/teacher.html"
      },
      {
        "source": "/teacher.html",
        "destination": "/teacher.html"
      },
      {
        "source": "/editor.html",
        "destination": "/editor.html"
      },
      {
        "source": "/view.html",
        "destination": "/view.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
