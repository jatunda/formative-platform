{
  "rules": {
    "content": {
      "$contentId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['title']) && newData.child('title').isString()",
        
        "title": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 200"
        },
        "blocks": {
          ".validate": "newData.exists()",
          "$blockIndex": {
            "type": {
              ".validate": "newData.isString() && (newData.val() == 'question')"
            },
            "content": {
              "$contentIndex": {
                "type": {
                  ".validate": "newData.isString() && (newData.val() == 'text' || newData.val() == 'code')"
                },
                "value": {
                  ".validate": "newData.isString()"
                },
                "language": {
                  ".validate": "newData.isString() && newData.val().length <= 50"
                }
              }
            }
          }
        }
      }
    },
    
    "schedule": {
      "$classId": {
        "$dayIndex": {
          ".read": true,
          ".write": true,
          "$dayIndex": {
            ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 6"
          }
        }
      }
    },
    
    "classes": {
      "$classId": {
        ".read": true,
        ".write": true,
        
        "dateOffset": {
          ".validate": "newData.isNumber()"
        },
        
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 100"
        }
      }
    },
    
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}